<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#E300DD">

    <TextView
        android:id="@+id/diramutkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/spoky"
        android:text="Diramut"
        android:textColor="@color/yellow"
        android:textSize="100dp"
        app:layout_constraintBottom_toTopOf="@id/sistem"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/sistem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sistem pakar diagnosa penyakit kucing"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="-15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/diramutkun"
        />

    <LinearLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sistem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sistem"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/spoky"
            android:text="Selamat Datang"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <LinearLayout
            android:id="@+id/btnlanjut"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/shape1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="lnjutbtn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lanjut"
                android:textColor="@color/purple"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ahyar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnlanjut"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="dibuat oleh Team Diramut Umsida"
            android:textColor="@color/white"
            android:textSize="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="partner by:"
            android:textColor="@color/yellow"
            android:textSize="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/halovet" />

        <ImageView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/vet" />


    </LinearLayout>



    <ImageView
        android:id="@+id/homept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/homepet"
        android:layout_below="@+id/sl"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>