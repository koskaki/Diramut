<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bantuan">

   <LinearLayout
       android:id="@+id/judul2"
       android:layout_width="match_parent"
       android:layout_height="160dp"
       android:background="@drawable/shape2"
       android:orientation="vertical"
       android:gravity="center">
      <TextView
          android:id="@+id/diramutk2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Diramut"
          android:textSize="75dp"
          android:fontFamily="@font/spoky"
          android:textColor="@color/yellow"
          android:layout_centerHorizontal="true"
          />
      <TextView
          android:id="@+id/sistemm2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="sistem pakar diagnosa penyakit kucing"
          android:textSize="11dp"
          android:textColor="@color/white"
          android:layout_marginTop="-15dp"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/diramutk"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="180dp"
       android:layout_marginRight="40dp"
       android:layout_marginLeft="40dp"
       android:orientation="vertical"
       >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Bantuan"
          android:textSize="45dp"
          android:fontFamily="@font/snaphand"
          android:textColor="#646464"
          />
      <ImageView
          android:layout_width="110dp"
          android:layout_height="8dp"
          android:background="@drawable/shape1"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="1. Buka Aplikasinya"
          android:textSize="20dp"
          android:fontFamily="sans-serif-medium"
          android:textColor="@color/black"
         />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="2. Buka Aplikasinya"
          android:textSize="20dp"
          android:fontFamily="sans-serif-medium"
          android:textColor="@color/black"
          />


   </LinearLayout>

</FrameLayout>