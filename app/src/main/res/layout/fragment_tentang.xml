<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tentang">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/diramutk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diramut"
            android:textSize="75dp"
            android:fontFamily="@font/spoky"
            android:textColor="@color/purple"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/sistemm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sistem pakar diagnosa penyakit kucing"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:layout_marginTop="-15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/diramutk"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang"
            android:textSize="45dp"
            android:fontFamily="@font/snaphand"
            android:textColor="#646464"
            />
        <ImageView
            android:layout_width="110dp"
            android:layout_height="8dp"
            android:background="@drawable/shape1"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shapepth"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_gravity="left"
        >


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shape4"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/aku"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad Ahyar Sholihuddin"
                android:textSize="16dp"
                android:textColor="@color/purple"
                android:fontFamily="@font/futurastdheavy"
                />
            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembuat"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/futurabook"
                />
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>


</FrameLayout>